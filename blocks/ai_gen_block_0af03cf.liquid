<script>
(function() {
  class FooterNewsletter{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.form = this.querySelector('form');
      this.emailInput = this.querySelector('#newsletter-email-{{ ai_gen_id }}');
      this.formContainer = this.querySelector('#newsletter-form-{{ ai_gen_id }}');
      this.errorMessage = this.querySelector('#newsletter-error-{{ ai_gen_id }}');
      
      this.setupEventListeners();
    }

    setupEventListeners() {
      this.form.addEventListener('submit', (e) => {
        e.preventDefault();
        this.validateEmail();
      });

      this.emailInput.addEventListener('input', () => {
        this.clearError();
      });
    }

    validateEmail() {
      const email = this.emailInput.value.trim();
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!email || !emailRegex.test(email)) {
        this.showError();
        return;
      }

      this.clearError();
      this.emailInput.value = '';
    }

    showError() {
      this.formContainer.classList.add('error');
      this.errorMessage.classList.add('show');
      this.emailInput.setAttribute('aria-invalid', 'true');
      this.emailInput.setAttribute('aria-describedby', 'newsletter-error-{{ ai_gen_id }}');
    }

    clearError() {
      this.formContainer.classList.remove('error');
      this.errorMessage.classList.remove('show');
      this.emailInput.removeAttribute('aria-invalid');
      this.emailInput.removeAttribute('aria-describedby');
    }
  }

  customElements.define('footer-newsletter-{{ ai_gen_id }}', FooterNewsletter{{ ai_gen_id }});
})();
</script>

