    padding: 0 18px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
  }

  .ai-footer-error-message-{{ ai_gen_id }} {
    color: #e53935;
    font-size: 12px;
    margin-top: 8px;
    display: none;
  }

  .ai-footer-error-message-{{ ai_gen_id }}.show {
    display: block;
  }

  .ai-footer-links-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.text_size }}px;
    transition: color 0.3s ease;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    margin-top: 16px;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
